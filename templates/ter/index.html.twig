        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ TER.title }}</h5>

                    <p class="card-text">{{ TER.teacher.lastname }} {{ TER.description }}</p>
                    <a href="{{ path('app_ter_show', {id: TER.id}) }}" class="btn btn-primary">Plus de d√©tails</a>
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}
{% endblock %}
