{% extends '_connectedNavBar.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Choix de l'année
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_student') }}">Tous</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_student_degree',{degree: 1}) }}">1 er année</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_student_degree',{degree: 2}) }}">2 ème année</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            {% for student in students %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <img src="{{ asset('img/default_profile_picture.png') }}">
                            {{ student.firstname }} {{ student.lastname }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
