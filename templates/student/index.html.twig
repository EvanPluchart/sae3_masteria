{% extends '_connectedNavBar.html.twig' %}

{% block title %}Page trombinoscope{% endblock %}

{% block body %}
    {{ include('student/_array_year.html.twig') }}

    <div class="container">
        <div class="row">
            {% for student in students %}
                <div class="col-4">
                    <a href="{{ path('app_student_profil', {id: student.id}) }}">
                        <div class="card">
                            <div class="card-body">
                                <img src="{{ asset('img/default_profile_picture.png') }}">
                                {{ student.firstname }} {{ student.lastname }}
                                {% if student.degree == 1%}
                                    1 er année
                                {% else %}
                                    2 ème année
                                {% endif %}
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
