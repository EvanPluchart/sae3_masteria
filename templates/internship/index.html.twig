{% extends '_connectedNavBar.html.twig' %}

{% block title %}Liste des stages{% endblock %}

{% block body %}
    <h1>Stages</h1>
    {% if app.user.roles[0] == 'ROLE_COMPANY' %}
        <a class="btn btn-outline-primary" href={{ path('app_internship_create') }}>Ajouter une offre de stage</a>
    {% endif %}

    <div class="container">
        <div class="row">
            {% for internship in internships %}

                {% if internship.company.userIdentifier == app.user.userIdentifier %}
                    <div class="col-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ internship.company.companyName }}</h5>

                                <p class="card-text">{{ internship.company.supervisorLastname }} {{ internship.company.supervisorFirstname }}</p>
                                <a href="{{ path('app_internship_show', {id: internship.id}) }}" class="btn btn-primary">Plus de détails</a>
                            </div>
                        </div>
                    </div>
                {% elseif app.user.roles[0] != 'ROLE_COMPANY' %}
                    <div class="col-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ internship.company.companyName }}</h5>

                                <p class="card-text">{{ internship.company.supervisorLastname }} {{ internship.company.supervisorFirstname }}</p>
                                <a href="{{ path('app_internship_show', {id: internship.id}) }}" class="btn btn-primary">Plus de détails</a>
                            </div>
                        </div>
                    </div>
                {% endif %}

            {% endfor %}
        </div>
    </div>
{% endblock %}
