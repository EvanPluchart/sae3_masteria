{% extends 'base.html.twig' %}

{% block title %}Hello InternshipController!{% endblock %}

{% block body %}
    <h1>Stages</h1>
    <div class="container">
        <div class="row">
            {% for internship in internships %}
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ internship.company.companyName }}</h5>
                            <p class="card-text">{{ internship.company.supervisorLastname }} {{ internship.company.supervisorFirstname }}</p>
                            <a href="{{ path('app_internship_show', {id: internship.id}) }}" class="btn btn-primary">Plus de d√©tails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
